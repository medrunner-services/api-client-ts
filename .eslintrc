{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint",
    "simple-import-sort",
    "eslint-plugin-tsdoc"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "ignorePatterns": ["*.vue"],
  "rules": {
    "simple-import-sort/imports": "error",
    "tsdoc/syntax": "warn",
    "@typescript-eslint/explicit-function-return-type": "error"
  }
}
